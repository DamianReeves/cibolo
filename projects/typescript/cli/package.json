{
  "name": "cibolo-cli",
  "version": "0.1.0",
  "description": "CLI for Cibolo document translation tool",
  "type": "module",
  "main": "./src/index.ts",
  "bin": {
    "cibolo": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "check": "bun run --bun tsc --noEmit && bunx prettier --check \"src/**/*.{ts,tsx,json}\" && bunx eslint --config ../../../.eslintrc.json \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@trpc/server": "^10.45.2",
    "trpc-cli": "^0.1.0",
    "arktype": "^2.0.0",
    "cibolo-core": "workspace:*",
    "cibolo-tools": "workspace:*",
    "effect": "^3.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.0"
  }
}
