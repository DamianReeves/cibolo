{
  "name": "ndoctrinate",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/typescript/cli/src",
  "projectType": "application",
  "tags": ["type:application", "scope:cli"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run build.ts",
        "cwd": "apps/typescript/cli"
      },
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run src/index.ts",
        "cwd": "apps/typescript/cli"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "apps/typescript/cli"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test",
        "cwd": "apps/typescript/cli"
      }
    },
    "verify": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bun run --bun tsc --noEmit",
          "bunx prettier --check \"src/**/*.{ts,tsx,json}\"",
          "bunx eslint --config ../../../.eslintrc.json \"src/**/*.{ts,tsx}\""
        ],
        "cwd": "apps/typescript/cli",
        "parallel": false
      },
      "dependsOn": ["^build"]
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run ../../../scripts/check.ts verify test",
        "cwd": "apps/typescript/cli"
      },
      "dependsOn": ["verify", "test"]
    }
  }
}
