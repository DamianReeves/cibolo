{
  "name": "ndoctrinate-core",
  "version": "0.1.0",
  "description": "Core types and interfaces for Ndoctrinate document processing",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "test": "bun test",
    "format": "bunx prettier --write \"src/**/*.{ts,tsx,json}\"",
    "lint": "bunx eslint --config ../../../.eslintrc.json \"src/**/*.{ts,tsx}\" --fix",
    "verify": "bun run --bun tsc --noEmit && bunx prettier --check \"src/**/*.{ts,tsx,json}\" && bunx eslint --config ../../../.eslintrc.json \"src/**/*.{ts,tsx}\"",
    "check": "bun run ../../../scripts/check.ts verify test"
  },
  "dependencies": {
    "arktype": "^2.0.0",
    "effect": "^3.0.0",
    "vfile": "^6.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/unist": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.0"
  }
}
