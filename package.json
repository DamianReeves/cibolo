{
  "name": "ndoctrinate-root",
  "version": "0.1.0",
  "description": "A pluggable document translation tool built using WebAssembly (WASM) and the WASM Component Model",
  "type": "module",
  "workspaces": [
    "projects/typescript/*",
    "projects/typescript/examples/*"
  ],
  "private": true,
  "scripts": {
    "setup": "make setup",
    "cli": "bun run projects/typescript/cli/src/index.ts",
    "ndoctrinate": "./projects/typescript/cli/dist/ndoctrinate",
    "verify": "bun run --workspaces verify",
    "check": "bun run scripts/check-workspaces.ts",
    "example:simple-pipeline": "bun run --filter simple-pipeline-example start"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.2.5"
  }
}
