{
  "name": "ndoctrinate-root",
  "version": "0.1.0",
  "description": "A pluggable document translation tool built using WebAssembly (WASM) and the WASM Component Model",
  "type": "module",
  "workspaces": [
    "projects/typescript/*",
    "projects/typescript/examples/*"
  ],
  "private": true,
  "scripts": {
    "setup": "make setup",
    "cli": "nx run ndoctrinate:dev",
    "ndoctrinate": "./projects/typescript/cli/dist/ndoctrinate",
    "build": "nx run-many -t build",
    "build:affected": "nx affected -t build",
    "test": "nx run-many -t test",
    "test:affected": "nx affected -t test",
    "verify": "nx run-many -t verify",
    "verify:affected": "nx affected -t verify",
    "check": "nx run-many -t check",
    "check:affected": "nx affected -t check",
    "example:simple-pipeline": "nx run simple-pipeline-example:start",
    "graph": "nx graph",
    "reset": "nx reset"
  },
  "devDependencies": {
    "@nx/js": "^22.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.1.8",
    "nx": "^22.0.3",
    "prettier": "^3.2.5"
  }
}
