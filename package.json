{
  "name": "ndoctrinate-root",
  "version": "0.1.0",
  "description": "A pluggable document translation tool built using WebAssembly (WASM) and the WASM Component Model",
  "type": "module",
  "workspaces": [
    "projects/typescript/*"
  ],
  "private": true,
  "scripts": {
    "setup": "make setup",
    "cli": "bun run projects/typescript/cli/src/index.ts",
    "ndoctrinate": "./projects/typescript/cli/dist/ndoctrinate",
    "verify": "bun run --workspaces verify",
    "check": "bun run scripts/check-workspaces.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5"
  }
}
